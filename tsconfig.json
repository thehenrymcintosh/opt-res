{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es2015", "dom" ],    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "declaration": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".webpack/**/*"
  ]
}
